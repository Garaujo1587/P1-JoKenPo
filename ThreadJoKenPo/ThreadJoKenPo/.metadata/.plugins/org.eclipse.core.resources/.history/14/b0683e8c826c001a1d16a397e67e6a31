package controller;

import java.util.concurrent.Semaphore;

public class ThreadJoKenPo extends Thread {
	private String jogador1;
	private String jogador2;
	private static int time1;
	private static int time2;
	private static int jogo;

	public ThreadJoKenPo(String jogador1, String jogador2) {
		this.jogador1 = jogador1;
		this.jogador2 = jogador2;
		this.time1 = 0;
		this.time2 = 0;
		this.jogo = 0;

	}

	private void Duelo() {
		int vitoria1 = 0;
		int vitoria2 = 0;
		int j1;
		int j2;
		// tesoura = 1;
		// papel = 2;
		// pedra = 3;

		while (jogo < 5) {

			while (vitoria1 < 3 && vitoria2 < 3) {

				try {
					sleep(500);
				} catch (InterruptedException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}

				j1 = (int) ((Math.random() * 3) + 1);
				j2 = (int) ((Math.random() * 3) + 1);

				switch (j1) {
				case 1:
					if (j1 == j2) {
						System.out.println(jogador1 + " jogou tesoura " + jogador2 + " jogou tesoura = empate");
					} else {
						if (j2 == 2) {

							System.out.println(
									jogador1 + " jogou tesoura " + jogador2 + " jogou papel = Vitória de " + jogador1);
							vitoria1++;
						}
						if (j2 == 3) {

							System.out.println(
									jogador1 + " jogou tesoura " + jogador2 + " jogou pedra = Vitória de " + jogador2);
							vitoria2++;
						}
					}
					break;
				case 2:
					if (j1 == j2) {
						System.out.println(jogador1 + " jogou papel " + jogador2 + " jogou papel = Empate");
					} else {
						if (j2 == 1) {

							System.out.println(
									jogador1 + " jogou papel " + jogador2 + " jogou tesoura = Vitória de " + jogador2);
							vitoria2++;
						}
						if (j2 == 3) {

							System.out.println(
									jogador1 + " jogou papel " + jogador2 + " jogou pedra = Vitória de " + jogador1);
							vitoria1++;
						}
					}

					break;
				case 3:
					if (j1 == j2) {
						System.out.println(jogador1 + " jogou pedra " + jogador2+" jogou pedra = empate");
					} else {
						if (j2 == 1) {

							System.out.println(
									jogador1 + " jogou pedra " + ", jogador2 jogou tesoura = Vitória de " + jogador1);
							vitoria1++;
						}
						if (j2 == 2) {

							System.out.println(
									jogador1 + " jogou pedra " + jogador2 + " jogou papel = Vitória de " + jogador2);
							vitoria2++;
						}
					}

					break;

				}

			}
			if (vitoria1 == 3) {
				time1++;
			} else {
				time2++;
			}
		}
		System.out.println("Time A ganhou " + time1 + " Time B ganhou " + time2);
	}

	private void MostraVencedores() {
		System.out.println("Time A ganhou " + time1 + " Time B ganhou " + time2);
	}

	@Override
	public void run() {
		Duelo();
		MostraVencedores();
	}
}
